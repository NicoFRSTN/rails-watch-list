<div class='container'>
  <div class="row justify-content-md-center">
    <div class='col-8'>

      <div class='title text-center'>
        <h1>Welcome to MovieLists !</h1>
      </div>

      <div>
        <ul>
          <% @lists.each do |list|%>
          <li> <%= link_to(list.name, list_path(list)) %> </li>
          <% end %>
        </ul>
      </div>

      <div class='bottom_bar'>
        <%= link_to "Create a new list", new_list_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
