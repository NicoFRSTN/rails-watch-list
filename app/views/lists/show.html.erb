<div>
  <h1 class='title text-center'>List: <%= @list.name %></h1>
</div>

<div position='relative'>
  <% @list.movies.each do |movie| %>

    <div class="film-info">
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <h2><%= movie.title %></h2> <br>
      <%= movie.overview %> <br>
      <p><strong>Rating: </strong><%= movie.rating %></p>
      <p><strong>Comment: </strong><%= bookmark.comment %></p>
      <%= link_to 'delete this movie', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'btn btn-outline-secondary' %> <br>
    </div>
  <% end %>

</div>

<div class='bottom_bar'>
  <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn btn-secondary' %>
  <%= link_to 'delete this list', list_path(@list), method: :delete, class: 'btn btn-secondary', data: { confirm: 'Are you sure you want to delete this list?' } %>
  <%= link_to "Back to lists menu", lists_path, class: "btn btn-secondary" %>
</div>
